<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="CircularProgressStyle">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:indeterminate">true</item>
    </style>

    <style name="ToolbarTheme" parent="Widget.AppCompat.Light.ActionBar">
        <item name="android:textColorPrimary">@color/anthracite</item>
        <item name="actionMenuTextColor">@color/anthracite</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="TextAppearanceTitle" parent="TextAppearance.AppCompat.Title"/>
</resources>
